---
const {
  slug,
  data: { title, description, date },
} = Astro.props;

const format = new Intl.DateTimeFormat("en-us", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li class="post-entry">
  <a href={`/posts/${slug}`}>{title}</a>
  <time datetime={date.toISOString()}>Published on {format.format(date)}</time>
  <p>{description}</p>
</li>

<style>
  .post-entry {
    display: flex;
    flex-direction: column;
  }

  a {
    font-size: 18px;
  }

  time {
    font-size: 14px;
    font-style: italic;
  }

  p {
    margin-block-end: 3px;
  }
</style>
